# ================================================================
# üöÄ ZK-PRET VERCEL PRODUCTION CONFIGURATION - ASYNC MODE ONLY
# ================================================================

# ================================================================
# üéõÔ∏è MASTER OPERATION MODE - FORCED ASYNC
# ================================================================
OPERATION_MODE=HTTP
NODE_ENV=production

# ================================================================
# üåê VERCEL SERVERLESS CONFIGURATION
# ================================================================
ZK_PRET_WEB_APP_PORT=3000
ZK_PRET_WEB_APP_HOST=0.0.0.0

# Server Configuration - Connect to your real API server
ZK_PRET_SERVER_TYPE=http
ZK_PRET_SERVER_URL=https://your-api-server.vercel.app
ZK_PRET_HTTP_SERVER_URL=https://your-api-server.vercel.app
ZK_PRET_SERVER_TIMEOUT=1800000

# ================================================================
# ‚ö° ASYNC FEATURES - ALL ENABLED (REAL IMPLEMENTATION)
# ================================================================
ENABLE_ASYNC_JOBS=true
ENABLE_WEBSOCKETS=false
ENABLE_JOB_PERSISTENCE=false
ENABLE_BROWSER_NOTIFICATIONS=true
ENABLE_JOB_RECOVERY=true
ENABLE_ENHANCED_UI=true
ENABLE_POLLING_FALLBACK=true

# ================================================================
# üîí SECURITY SETTINGS
# ================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=*

# ================================================================
# üìä LOGGING & MONITORING
# ================================================================
LOG_LEVEL=info
WS_HEARTBEAT_INTERVAL=30000
API_PREFIX=/api/v1
MAX_REQUEST_SIZE=10mb

# ================================================================
# üéØ REAL IMPLEMENTATION ONLY - NO DEMO MODE
# ================================================================
ENABLE_DEMO_MODE=false
ENABLE_MOCK_RESPONSES=false
