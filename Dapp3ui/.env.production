# Production Environment Variables for ZK-PRET Web App

# Core Configuration
NODE_ENV=production
ZK_PRET_WEB_APP_PORT=3000
ZK_PRET_WEB_APP_HOST=0.0.0.0

# ZK-PRET-SERVER Connection
ZK_PRET_SERVER_TYPE=http
ZK_PRET_SERVER_URL=https://your-zk-pret-core-engine.vercel.app
ZK_PRET_SERVER_TIMEOUT=1800000

# ACTUS Server Configuration
ACTUS_SERVER_URL=http://98.84.165.146:8083/eventsBatch

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Settings
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000

# API Settings
API_PREFIX=/api/v1
MAX_REQUEST_SIZE=10mb

# Async Job Features
ENABLE_ASYNC_JOBS=true
ENABLE_WEBSOCKETS=true
ENABLE_JOB_PERSISTENCE=false
ENABLE_BROWSER_NOTIFICATIONS=true
ENABLE_JOB_RECOVERY=true
ENABLE_ENHANCED_UI=true
ENABLE_POLLING_FALLBACK=true
